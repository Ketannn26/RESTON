@{
    ViewData["Title"] = "Home - Reston";
}
 
    
<div class="mt-5">
    <div class="content-container text-center">
        <h1 class="mb-4">Welcome to Reston!</h1>
    </div>

    <!-- Menu Slider -->
    <div id="menuSlider" class="carousel slide shadow-sm bg-light mx-auto mb-5" style="width: 1200px; border-radius: 0; padding: 20px;" data-bs-ride="carousel">
        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#menuSlider" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#menuSlider" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#menuSlider" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Carousel Inner -->
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active position-relative">
                <a href="/Menu/Menu">
                    <img src="/images/pexels-ella-olsson-572949-1640772.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Menu Image 1">
                </a>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item position-relative">
                <a href="/Menu/Menu">
                    <img src="/images/pexels-ella-olsson-572949-1640777.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Menu Image 2">
                </a>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item position-relative">
                <a href="/Menu/Menu">
                    <img src="/images/pexels-ella-olsson-572949-3026808.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Menu Image 3">
                </a>
            </div>
        </div>


        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#menuSlider" data-bs-slide="prev" style="color: gray;">
            <span class="carousel-control-prev-icon" style="background-color: gray;" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#menuSlider" data-bs-slide="next" style="color: gray;">
            <span class="carousel-control-next-icon" style="background-color: gray;" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- About Us Card -->
    <div class="card text-center shadow-sm mx-auto bg-light mb-5" style="max-width: 1200px; border-radius: 0;"> 
        <div class="card-body">
            <h4>About Us</h4>
            <p class="card-text">Learn more about our story and commitment to quality dining.</p>
            <a asp-controller="About" asp-action="About" class="btn btn-primary">Learn More</a>
        </div>
    </div>

    <!-- Book a Table Card -->
    <div class="card text-center shadow-sm mx-auto bg-light mb-5" style="max-width: 1200px; border-radius: 0;">
        <div class="card-body">
            <h4>Book Table</h4>
            <p class="card-text">Reserve your table now for a seamless dining experience.</p>
            <a asp-controller="BookTable" asp-action="BookTableLanding" class="btn btn-primary">Learn More</a>
        </div>
    </div>

    <!-- Contact Section -->
    <section id="contact" class="py-4 mt-5">
        <h3 class="text-center mb-3">Contact Us</h3>
        <p class="text-center">We’d love to hear from you!</p>
        <div class="text-center">
            <p><i class="bi bi-geo-alt-fill text-danger"></i> 123 Main Street, Cityville</p>
            <p><i class="bi bi-telephone text-warning"></i> Phone: +1 123-456-7890</p>
            <p><i class="bi bi-envelope text-primary"></i> Email: reston@ourrestaurant.com</p>
            <p><i class="bi bi-clock text-primary"></i> Open: 10:00 AM - 10:00 PM</p>
        </div>
    </section>
</div>
