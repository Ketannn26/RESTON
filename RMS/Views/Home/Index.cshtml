@{
    ViewData["Title"] = "Home - Reston";
}

<div class="mt-5">
    <!-- Welcome Section -->
    <div class="text-center">
        <h1 class="display-4 text-primary">Welcome to Reston!</h1>
        <p class="lead text-muted">Experience the finest dining with our delicious menu and exceptional service.</p>
    </div>

    <!-- Carousel Card -->
    <div class="mb-4">
        <!-- Single Card Container -->
        <div class="card shadow-sm" style="width: 1200px; height: auto; background-color: transparent; backdrop-filter: blur(10px); border-radius: 0; margin: 0 auto;">
            <div class="card-body p-0">
                <!-- Flex container for three sections -->
                <div class="row g-0">
                    <!-- Breakfast Section -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-3">
                            <!-- Added rounded-3 to the card -->
                            <img src="/images/bf.jpg" class="card-img-top rounded-3" alt="Breakfast" style="object-fit: cover; height: 300px;">
                            <div class="card-body text-center" style="border-radius: 10px;">
                                <h5 class="card-title fw-bold text-dark">Breakfast</h5>
                                <p class="card-text text-dark">Start your day with a delicious and energizing breakfast.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Lunch Section -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-3">
                            <!-- Added rounded-3 to the card -->
                            <img src="/images/SigDish.jpg" class="card-img-top rounded-3" alt="Lunch" style="object-fit: cover; height: 300px;">
                            <div class="card-body text-center" style="border-radius: 10px;">
                                <h5 class="card-title fw-bold text-dark">Lunch</h5>
                                <p class="card-text text-dark">Enjoy a hearty and flavorful lunch to fuel your afternoon.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Dinner Section -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-3">
                            <!-- Added rounded-3 to the card -->
                            <img src="/images/bg.jpg" class="card-img-top rounded-3" alt="Dinner" style="object-fit: cover; height: 300px;">
                            <div class="card-body text-center" style="border-radius: 10px;">
                                <h5 class="card-title fw-bold text-dark">Dinner</h5>
                                <p class="card-text text-dark">End your day with a delightful dinner from our exquisite menu.</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Single "View Menu" Button -->
            <div class="card-footer text-center">
                <a href="/Menu/Menu" class="btn btn-primary btn-lg">View Menu</a>
            </div>
        </div>
    </div>

        <!-- About Us Card -->
        <div class="mb-4">
        <div class="card text-center shadow-sm mx-auto" style="max-width: 1200px; background-color: transparent; backdrop-filter: blur(10px); border-radius: 0;">
                <img src="/images/about.jpg" class="card-img-top mx-auto mt-4" alt="About" style="width: 150px; height: 150px;">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p class="card-text">Learn more about our story and commitment to quality dining.</p>
                    <a href="/About/About" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Book a Table Card -->
        <div class="mb-4">
        <div class="card text-center shadow-sm mx-auto" style="max-width: 1200px; background-color: transparent; backdrop-filter: blur(10px); border-radius: 0;">
                <img src="/images/book-table.jpg" class="card-img-top mx-auto mt-4" alt="Book Table" style="width: 150px; height: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Book a Table</h5>
                    <p class="card-text">Reserve your table now for a seamless dining experience.</p>
                    <a href="/Home/BookTable" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
   

    <!-- Contact Section -->
    <section id="contact" class="py-4 mt-5">
        <h3 class="text-center mb-3">Contact Us</h3>
        <p class="text-center">We’d love to hear from you!</p>
        <div class="text-center">
            <p><i class="bi bi-geo-alt-fill text-danger"></i> 123 Main Street, Cityville</p>
            <p><i class="bi bi-telephone text-warning"></i> Phone: +1 123-456-7890</p>
            <p><i class="bi bi-envelope text-primary"></i> Email: reston@ourrestaurant.com</p>
            <p><i class="bi bi-clock text-primary"></i> Open: 10:00 AM - 10:00 PM</p>
        </div>
    </section>
</div>
