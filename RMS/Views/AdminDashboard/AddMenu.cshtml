@model RMS.Models.Menu
<div class="text-danger">
    @Html.ValidationSummary(true)
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Add Menu Item</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AddMenu" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ItemName" class="form-label">Item Name</label>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsAvailable" class="form-label">Available</label>
                            <input asp-for="IsAvailable" type="checkbox" />
                        </div>

                        <div class="mb-3">
                            <label for="Image" class="form-label">Image</label>
                            <input type="file" name="Image" class="form-control" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Add Menu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
