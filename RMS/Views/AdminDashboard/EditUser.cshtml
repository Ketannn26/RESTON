@model RMS.Models.User

<div class="card mx-auto mt-5" style="max-width: 600px;">
    <div class="card-body">
        <h2 class="card-title text-center">Edit User</h2>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="U_Id" />

            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Email Address -->
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Role Selection -->
            <div class="form-group mt-3">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles" required></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Current Password -->
            <div class="form-group mt-3">
                <label asp-for="Password" class="control-label">Current Password</label>
                <input asp-for="Password" class="form-control" type="text" readonly />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="form-group mt-3">
                <label asp-for="Password" class="control-label">New Password</label>
                <input name="newPassword" id="newPassword" class="form-control" type="password" />
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-warning w-25 me-2">Update</button>
                <a class="btn btn-secondary w-25" asp-action="UserList">Cancel</a>
            </div>
        </form>
    </div>
</div>
