@model RMS.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
        <h2 class="text-center text-danger mb-4">Delete User</h2>
        <p class="text-center">Are you sure you want to delete this user?</p>

        @if (Model != null)
        {
            <div class="text-center mb-3">
                <h4>@Model.FullName</h4>
                <p>Email: @Model.Email</p>
                <p>Role: @Model.Role</p>
            </div>
        }

        <form asp-action="ConfirmDeleteUser" method="post">
            <input type="hidden" asp-for="U_Id" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger w-25 mt-2 me-4">
                    Delete
                </button>
                <a class="btn btn-secondary w-25 mt-2" asp-action="UserList">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
