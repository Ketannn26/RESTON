@model RMS.Models.Menu

<div class="card mx-auto mt-5" style="max-width: 600px;">
    <div class="card-body">
        <h2 class="card-title text-center">Edit Menu Item</h2>

        <form asp-action="EditMenuItem" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="MenuItemID" />

            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" id="IsAvailable" />
                <label asp-for="IsAvailable" class="form-check-label"></label>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CurrentImage">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" style="max-width: 150px;" />
                    </div>
                }
                else
                {
                    <p>No image uploaded</p>
                }
            </div>

            <div class="form-group">
                <label for="ImageUpload">Upload New Image</label>
                <input type="file" class="form-control" id="ImageUpload" name="ImageUpload" accept="image/*" />
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-25 mt-2 me-2">Save</button>
                <a class="btn btn-secondary w-25 mt-2" asp-action="MenuList">Cancel</a>
            </div>
        </form>
    </div>
</div>
