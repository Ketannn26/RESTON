@model RMS.Models.Menu

@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
        <h2 class="text-center text-danger mb-4">Delete Menu Item</h2>
        <p class="text-center">Are you sure you want to delete this menu item?</p>

        <div class="text-center mb-3">
            <h4>@Model.ItemName</h4>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImageUrl" alt="Menu Item Image" class="img-thumbnail" style="max-width: 300px;" />
                </div>
            }
            else
            {
                <p class="text-muted">No image available for this item.</p>
            }

            <p>Price: @Model.Price</p>
            <p>Available: @(Model.IsAvailable ? "Yes" : "No")</p>
        </div>

        <form asp-action="ConfirmDeleteMenuItem" method="post">
            <input type="hidden" name="id" value="@Model.MenuItemID" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger w-25 mt-2 me-4">
                    Delete
                </button>
                <a class="btn btn-secondary w-25 mt-2" asp-action="MenuList">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
