@model IEnumerable<RMS.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 900px;">
        <h2 class="text-center text-primary mb-4">User Management</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.U_Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="DeleteUser" asp-route-id="@user.U_Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-success" asp-action="AddUser">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
    </div>
</div>
