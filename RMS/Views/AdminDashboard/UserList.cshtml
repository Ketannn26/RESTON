@model IEnumerable<RMS.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 900px;">
        <h2 class="text-center text-primary mb-4">User Management</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
