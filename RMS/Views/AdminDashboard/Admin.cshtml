@{
    Layout = "_Layout"; // Ensure Bootstrap is loaded in your layout
}

<div class="container">
    <div class="row justify-content-center">
        <div class="container mt-4">
            <!-- Dashboard Content -->
            <div class="text-center p-4">
                <h2 class="text-center mb-4">Welcome, @ViewBag.UserFullName!</h2>
            </div>

            <div class="card bg-light mt-4" style="border-radius: 0;">
                <div class="card-header text-center" style="border-radius: 0;">
                    <h5>Admin Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Menu Management Section -->
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <h6>Menu Management</h6>
                            <p>Manage the restaurant's menu items.</p>
                            <a class="btn btn-primary" href="/AdminDashboard/MenuList">Manage Menu</a>
                        </div>

                        <!-- Table Booking Section -->
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <h6>Table Booking</h6>
                            <p>View all booked tables.</p>
                            <a class="btn btn-info" href="/AdminDashboard/ViewTables">View Tables</a>
                        </div>

                        <!-- User Management Section -->
                        <div class="col-md-4 text-center">
                            <h6>User Management</h6>
                            <p>View all registered users.</p>
                            <a class="btn btn-success" href="/AdminDashboard/UserList">View Users</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
