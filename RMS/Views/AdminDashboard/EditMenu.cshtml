@model RMS.Models.Menu

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card Container -->
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white text-center">
                    <h4>Edit Menu Item</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditMenu" method="post">

                        <!-- Item Name -->
                        <div class="mb-3">
                            <label asp-for="ItemName" class="form-label">Item Name</label>
                            <input asp-for="ItemName" class="form-control" placeholder="Enter item name" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Is Available -->
                        <div class="mb-3 form-check">
                            <input asp-for="IsAvailable" type="checkbox" class="form-check-input" id="IsAvailable" />
                            <label asp-for="IsAvailable" class="form-check-label">Available</label>
                        </div>

                        <!-- Display Current Image -->
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="form-group">
                                    <label for="CurrentImage">Current Image</label><br />
                                    <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.ItemName" style="max-width: 150px; max-height: 150px;">
                                </div>
                            }
                        </div>

                        <!-- Image Upload (Optional) -->
                        <div class="mb-3">
                            <label for="Image" class="form-label">Upload New Image (Optional)</label>
                            <input type="file" name="Image" class="form-control" accept="image/*" />
                            <small class="text-muted">If you want to change the image, upload a new one.</small>
                        </div>


                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning px-4">Update Menu</button>
                            <a asp-action="MenuList" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
