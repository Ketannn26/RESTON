@model RMS.Models.User

@{
    ViewData["Title"] = "Add New User";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
        <h2 class="text-center text-primary mb-4">Add New User</h2>

        <form asp-action="AddUser" method="post">
            <!-- Full Name -->
            <div class="form-group">
                <label for="FullName">Full Name</label>
                <input asp-for="FullName" class="form-control" id="FullName" required />
            </div>

            <!-- Email Address -->
            <div class="form-group mt-3">
                <label for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" id="Email" type="email" required />
            </div>

            <!-- Role Selection -->
            <div class="form-group mt-3">
                <label for="Role">Role</label>
                <select asp-for="Role" class="form-control" id="Role" required>
                    <option value="Customer">Customer</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <!-- Password -->
            <div class="form-group mt-3">
                <label for="Password">Password</label>
                <input asp-for="Password" class="form-control" id="Password" type="password" required />
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary w-25 me-4">Add User</button>
                <a class="btn btn-secondary w-25" asp-action="UserList">Cancel</a>
            </div>
        </form>
    </div>
</div>
