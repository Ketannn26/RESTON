@model IEnumerable<RMS.Models.Menu>

@{
    ViewData["Title"] = "Menu List";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 900px;">
        <h2 class="text-center text-primary mb-4">Menu List</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in Model)
                {
                    <tr>
                        <td>@menu.ItemName</td>
                        <td>@menu.Price</td>
                        <td>@(menu.IsAvailable ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="EditMenuItem" asp-route-id="@menu.MenuItemID" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="DeleteMenuItem" asp-route-id="@menu.MenuItemID" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-center">
            <a class="btn btn-success" asp-action="CreateMenuItem">
                <i class="bi bi-plus-circle"></i> Add New Menu Item
            </a>
        </div>
    </div>
</div>
