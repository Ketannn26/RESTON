@model IEnumerable<RMS.Models.Menu>

<h1 class="text-center my-5">Menu</h1>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <!-- Image of Menu Item -->
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.ItemName" style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title">@item.ItemName</h5>
                        <p class="card-text">Price: $@item.Price</p>
                        <p class="card-text"><strong>Available:</strong> @(item.IsAvailable ? "Yes" : "No")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No menu items available.</p>
}
