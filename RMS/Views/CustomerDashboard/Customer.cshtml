<div class="container mt-4">
    <h2 class="text-center mb-4">Welcome, @ViewBag.FullName!</h2>
    <p class="text-center">Explore the best of our services below.</p>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Menu">
                <div class="card-body">
                    <h5 class="card-title">Our Menu</h5>
                    <p class="card-text">Explore a variety of dishes carefully crafted for you.</p>
                    <a href="/Home/Menu" class="btn btn-primary">View Menu</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Book Table">
                <div class="card-body">
                    <h5 class="card-title">Reserve a Table</h5>
                    <p class="card-text">Make a reservation and enjoy a fine dining experience.</p>
                    <a href="/Home/BookTable" class="btn btn-success">Book Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <section id="about" class="py-4">
        <h3 class="text-center mb-3">About Our Restaurant</h3>
        <p class="text-center">
            At our restaurant, we combine mouth-watering dishes with a cozy atmosphere.
            Come and enjoy a delightful meal crafted with the freshest ingredients.
        </p>

        <!-- Image Gallery -->
        <div class="row text-center">
            <div class="card shadow-sm col-md-4 mb-3">
                <img src="https://via.placeholder.com/400x400" alt="Dining Area" class="img-fluid rounded">
                <p class="mt-2">Cozy Dining Area</p>
            </div>
            <div class="card shadow-sm col-md-4 mb-3">
                <img src="https://via.placeholder.com/400x400" alt="Signature Dish" class="img-fluid rounded">
                <p class="mt-2">Signature Dish</p>
            </div>
            <div class="card shadow-sm col-md-4 mb-3">
                <img src="https://via.placeholder.com/400x400" alt="Outdoor Seating" class="img-fluid rounded">
                <p class="mt-2">Beautiful Outdoor Seating</p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-4">
        <h3 class="text-center mb-3">Contact Us</h3>
        <p class="text-center">We’d love to hear from you!</p>
        <div class="text-center">
            <p><i class="bi bi-geo-alt-fill text-danger"></i> 123 Main Street, Cityville</p>
            <p><i class="bi bi-telephone text-warning"></i> Phone: +1 123-456-7890</p>
            <p><i class="bi bi-envelope text-primary"></i> Email: reston@ourrestaurant.com</p>
            <p><i class="bi bi-clock text-primary"></i> Open: 10:00 AM - 10:00 PM</p>
        </div>
    </section>
</div>