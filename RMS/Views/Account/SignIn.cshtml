@model RMS.Models.User

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4 mt-5">
                <h2 class="text-center mb-4">Sign In</h2>

                <!-- Show error message if ViewBag.ErrorMessage has a value -->
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="SignIn" method="post">
                    @Html.AntiForgeryToken() <!-- CSRF Protection -->
                    <!-- Email Address -->
                    <div class="form-group">
                        <label for="email" aria-label="Email Address">Email Address</label>
                        <input type="email"
                               class="form-control"
                               id="email"
                               name="email"
                               placeholder="Enter your email address"
                               required />
                    </div>

                    <!-- Password -->
                    <div class="form-group mt-3">
                        <label for="password" aria-label="Password">Password</label>
                        <input type="password"
                               class="form-control"
                               id="password"
                               name="password"
                               placeholder="Enter your password"
                               required />
                    </div>

                    <!-- Submit Button -->
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Sign In</button>
                    </div>

                    <!-- Sign-Up Link -->
                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="/Account/SignUp">Sign Up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
