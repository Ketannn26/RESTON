@model RMS.Models.User



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4 mt-5">
                <h2 class="text-center mb-4">Sign Up</h2>

                <!-- Show error message if ModelState has any errors -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <form asp-action="SignUp" method="post">
                    <!-- Full Name -->
                    <div class="form-group">
                        <label for="FullName">Full Name</label>
                        <input asp-for="FullName" class="form-control" id="FullName" placeholder="Enter your full name" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mt-3">
                        <label for="Email">Email Address</label>
                        <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mt-3">
                        <label for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Create a password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group mt-3">
                        <label for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber"
                               class="form-control"
                               id="PhoneNumber"
                               placeholder="Enter your phone number"
                               required
                               type="tel"
                               pattern="^\d{10}$"
                               title="Phone number must be exactly 10 digits." />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>


                    <!-- Role Dropdown -->
                    <div class="form-group mt-3">
                        <label for="Role" class="font-weight-bold text-secondary">Role</label>
                        <select asp-for="Role" class="form-control custom-select" id="Role" required>
                            <option value="" disabled selected>Select Role</option>
                            <option value="Customer">Customer</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>


                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Sign In</button>
                    </div>

                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="/Account/SignIn">Sign In</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
