@{
    ViewData["Title"] = "Book Your Table";
}

<div class="container my-5">
     @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm" style="background-color: #f8f9fa; border-radius: 0;">
                <div class="row no-gutters">
                    <!-- Image Section -->
                    <div class="col-md-4">
                        <img src="/images/pexels-cristian-rojas-7772239.jpg" class="card-img" alt="Dining Experience">
                    </div>
                    <!-- Text Section -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title mb-3">Why Book a Table?</h3>
                            <p class="card-text">
                                Experience a seamless dining journey with Reston by booking your table in advance. Enjoy a hassle-free visit where your table is ready when you arrive, and your experience is personalized to your preferences.
                            </p>
                            <p class="card-text">
                                Skip the wait, receive premium service, and make your time with us truly memorable. Whether you're celebrating a special occasion or enjoying a casual meal, reserving your table ensures peace of mind and top-tier attention from our team.
                            </p>
                            <a href="@Url.Action("BookTable", "BookTable")" class="btn btn-primary">Reserve Your Table</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
