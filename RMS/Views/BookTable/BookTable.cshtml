@model RMS.Models.Booking

@{
    ViewData["Title"] = "Book a Table";
}

<div class="container">
    <h2>Book a Table</h2>

    <!-- Display success or error messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" asp-action="BookTable">
        <div class="mb-3">
            <label for="UserName" class="form-label">Full Name</label>
            <input asp-for="UserName" class="form-control" id="UserName" readonly />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" id="Email" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Phone" class="form-label">Phone Number</label>
            <input asp-for="Phone" class="form-control" id="Phone" readonly />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ReservationDate" class="form-label">Reservation Date and Time</label>
            <input asp-for="ReservationDate" type="datetime-local" class="form-control" id="ReservationDate" />
            <span asp-validation-for="ReservationDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="NumberOfGuests" class="form-label">Number of Guests</label>
            <input asp-for="NumberOfGuests" type="number" class="form-control" id="NumberOfGuests" />
            <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Book Now</button>
    </form>
</div>
