@model RMS.Models.Booking

@{
    ViewData["Title"] = "Book a Table";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
        <h2 class="text-center text-primary mb-4">Book a Table</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post" asp-action="BookTable">
            <div class="mb-3">
                <label for="UserName" class="form-label">Full Name</label>
                <input asp-for="UserName" class="form-control" id="UserName" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" id="Email" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Phone" class="form-label">Phone Number</label>
                <input asp-for="Phone" class="form-control" id="Phone" readonly />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="ReservationDate" class="form-label">Reservation Date and Time</label>
                <input asp-for="ReservationDate" type="datetime-local" class="form-control" id="reservationDate" value="@Model.ReservationDate.ToString("hh:mm tt")" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="NumberOfGuests" class="form-label">Number of Guests</label>
                <input asp-for="NumberOfGuests" type="number" class="form-control" id="NumberOfGuests" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-25 mt-2 me-4">
                    Book Now
                </button>
                <a class="btn btn-secondary w-25 mt-2" asp-action="BookTableLanding">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
