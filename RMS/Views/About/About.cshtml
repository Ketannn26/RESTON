@model RMS.Models.User

<section id="about" class="py-5">
    <div class="container">
        <h1 class="text-center mb-4">About Reston</h1>


        <!-- Restaurant Introduction in One Card -->
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="card shadow-sm" style="background-color: #f8f9fa; border-radius: 0;">
                    <div class="row no-gutters">
                        <!-- Image Section -->
                        <div class="col-md-4">
                            <img src="/images/pexels-bertellifotografia-17057017.jpg" class="card-img" alt="Restaurant Interior">
                        </div>
                        <!-- Text Section -->
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title mb-3">Our Story</h3>
                                <p class="card-text">
                                    At Reston, we believe food should be an experience. Since opening our doors in 2004, we've been providing creative dishes and a welcoming atmosphere that brings people together. Whether it’s a casual meal or a special occasion, we offer the perfect setting for any gathering.
                                </p>
                                <p class="card-text">
                                    We are dedicated to providing an exceptional dining experience. Our team of talented chefs crafts mouth-watering dishes using the freshest ingredients, all served in a cozy, welcoming atmosphere.
                                </p>
                                <p class="card-text">
                                    Whether you're here for a casual meal, a special occasion, or simply to enjoy good food with great company, Reston is your destination.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-12">
                <div class="card shadow-sm bg-light" style="border-radius: 0;">
                    <div class="row no-gutters">
                        <!-- Text Section -->
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title mb-3">Signature Dishes</h3>
                                <p class="card-text">
                                    From our famous Ribeye Steak to fresh seasonal salads, our signature dishes are made to delight. Here are a few of our favorites:
                                </p>
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Dish1
                                        <span class="badge badge-info badge-pill">Delicious</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Dish2
                                        <span class="badge badge-danger badge-pill">Signature</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Dish3
                                        <span class="badge badge-success badge-pill">Fresh</span>
                                    </li>
                                </ul>
                                <!-- View Our Menu Button -->
                                <a href="/Menu/Menu" class="btn btn-primary mt-3">View Our Menu</a>
                            </div>
                        </div>
                        <!-- Image Section -->
                        <div class="col-md-4">
                            <img src="/images/pexels-ella-olsson-572949-3026808.jpg" class="card-img" alt="Signature Dish">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
